//
// Variables
//

//------------------------------- Global Colors --------------
$gray-dark =                 #373a3c
$gray =                      #55595c
$gray-light =                #818a91
$gray-lighter =              #eceeef
$gray-lightest =             #f7f7f9

$color__primary =             #0275d8
$color__success =             #5cb85c
$color__info =                #5bc0de
$color__warning =             #f0ad4e
$color__danger =              #d9534f

$color__dirt =                #7F5A43


//------------------------------- Typography -----------

//Fonts
$font-family-sans-serif = "Roboto", "Helvetica Neue", "Arial", sans-serif
$font-family-serif      = "Georgia", "Times New Roman", "Times", serif
$font-family-base       = $font-family-sans-serif

//Base font size
$font-size-root =   16px
$font-size-base =   1rem
$line-height-base = 1.5


//------------------------------- Body ------------------

//Body
$color__body-bg =    #fff
$color__font =       #4D4541


// Links
$color__link =            $color__primary
$color__link--hover =     darken($color__link, 15%)

//------------------------------- Layout ----------------

$global-container = 1400px
$nav-height =       60px


//------------------------------- Grid ----------------

// breakpoints represent start point

// When writing dX(divide at X) always start
// with s (small size) eg. start with mobile sizes
// Otherwise it will be broken

$breakpoints = {
    s: 0px,
    m: 576px,
    l: 720px,
    xl: 940px,
    xxl: 1200px
}

$containers = {
    s: 576px,
    m: 720px,
    l: 940px,
    xl: 1200px,
}


$gutter = 30px
$grid-columns = 12



