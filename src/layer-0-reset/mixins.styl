// Clearfix
// This way clearfix can be used as a class
// and as a extend inide other class
.clearfix {
    *zoom: 1;
    &:before, &:after {
        content: " ";
        display: table;
    }
    &:after {
         clear: both;
    }
}

clearfix() {
    *zoom: 1;
    &:before, &:after {
        content: " ";
        display: table;
    }
    &:after {
         clear: both;
    }
}


// Disable selection
no-select(){
    -webkit-touch-callout: none
    -webkit-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none
}